---
import { Image } from "astro:assets";
import cartucho from "../../public/cartucho2.png";
import defiverso from "../../public/defiverso2.png";
import vindi from "../../public/vindi.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Defiverso",
    image: defiverso as ImageMetadata,
    link: "https://defiverso.com",
    preview: "https://defiverso.com",
    status: "An educational platform that's integrates fiat and Web3 payments, mobile app, real-time notifications, event ticketing, and community management on Discord. The scalable architecture uses queues and messaging to handle large volumes of users and transactions",
  },
  {
    title: "Cartucho",
    image: cartucho as ImageMetadata,
    link: "https://github.com/gothsec/stockin-demo",
    preview: "https://stockin-demo.vercel.app",
    status: "A retro game preservation project using IPFS for decentralized and censorship-resistant storage of ISOs and ROMs of old games. The solution ensures continuous access to games without relying on centralized servers, using blockchain for storage and distribution.",
  },
  {
    title: "Vindi",
    image: vindi as ImageMetadata,
    link: "https://github.com/pheralb/svgl",
    preview: "https://svgl.app",
    status: "Integration of the Vindi payment platform with the WordPress CMS, enabling recurring payments management for small and medium e-commerce stores. The solution ensures secure and efficient transaction processing.",
  },
  {
    title: "DefiversoPay",
    image: defiverso as ImageMetadata,
    link: "https://github.com/Gothsec/Tron-Legacy-web",
    preview: "https://tron-legacy-web.vercel.app/",
    status: "A Web3 payment system based on RPC connectivity with blockchain nodes. Decentralized and censorship-resistant, it enables secure transactions between users and platforms without intermediaries. The solution is designed to ensure scalability and security in transactions.",
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group">
            
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 md:h-72 group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="flex items-center px-3">
                <div class="flex-grow">
                  <h4 class="text-2xl font-semibold">{project.title}</h4>
                  <span class="py-1 text-sm text-[var(--white-icon)]">
                    {project.status}
                  </span>
                </div>
                
              </div>
          </div>
        ))
      }
    </div>
    <a
      target="_blank"
      href="https://github.com/thiegocarvalho?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">More projects on</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
